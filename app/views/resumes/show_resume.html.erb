            <h4><%= @resume[:big_sam] %></h4>

            <p><%= @resume[:degree] %></p>
            <p><%= @resume[:edu_location] %></p>
          </div>
        </div>
      </div>   
    </div>
  </section>
   


  <section id="slide-4" class="homeSlide homeSlideTall">
