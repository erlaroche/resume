      <div class="curtainContainer">
        <div class="curtain" data-bottom-top="opacity: 0" data-106-top="height: 1%; top: -10%; opacity: 0;" data-center="height: 100%; top: 0%; opacity: 0.5" data-anchor-target="#slide-4"></div>
        <div class="copy" data-bottom-top="opacity: 0" data--100-bottom="opacity: 0" data--280-bottom="opacity: 1;" data-280-top="opacity: 1;" data-106-top="opacity: 0;" data-anchor-target="#slide-4 .copy" >
          <h3><%= @resume[:experience] %></h3>
          <h4><%= @resume[:msstd] %></h4>
          <p><%= @resume[:aboutms] %></p>
