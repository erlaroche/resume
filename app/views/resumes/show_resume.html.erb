        <div class="hsContent">
          <div class="plaxEl" data-106-top="opacity: 0" data-bottom="opacity: 1; position: fixed; top: 206px; width: 100%; left: 0;" data--30p-top="opacity: 1;" data--60p-top="opacity: 0;" data anchor-target="#slide-3" >
   
            <h3><%= @resume[:edu] %></h3>
            <h4><%= @resume[:ms] %></h4>

            <p>Full-Stack Web Development, Graduated: Jan 2014</p>
