              <h3><%= @resume[:tech] %></h3>

              <p><%= @resume[:server] %></p>

              <p><%= @resume[:client] %></p>

              <p><%= @resume[:skills] %></p>

              <p><%= @resume[:skill_1] %></p>

              <p><%= @resume[:skill_2] %></p>
          </h2>
        </div>
      </div>
    </div>
  </section>
    
  


  <section id="slide-3" class="homeSlide">
